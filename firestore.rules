rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      return isAuthenticated() && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Users collection
    match /users/{userId} {
      // Reads allowed for authenticated users (to get role, etc.)
      allow read: if isAuthenticated();
      // All writes to user documents must go through server-side endpoints (admin SDK).
      allow write: if false;
    }
    
    // Venues collection
    match /venues/{venueId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // VenueSlots collection (Critical data)
    // Explicitly deny client-side writes. All modifications must go through Server Actions.
    match /venueSlots/{venueId} {
      allow read: if true;
      allow write: if false; 
    }
    
    // Slots collection - client should not write directly. Server endpoints must perform slot mutations.
    match /slots/{slotId} {
      allow read: if true;
      allow write: if false;
    }
    
    // Bookings collection
    // Deny client-side creation/updates. All bookings must go through Server Actions.
    match /bookings/{bookingId} {
      allow read: if isAuthenticated() && (
        resource.data.userId == request.auth.uid || isAdmin()
      );
      allow write: if false;
    }

    // Reviews collection - server-only writes
    // Reviews and aggregated venue comments should be written via backend endpoints
    // so we can enforce uniqueness, abuse protection, and correct aggregation.
    match /reviews/{reviewId} {
      allow read: if true;
      allow write: if false;
    }

    // Venue comments subcollection (used for public display)
    match /venues/{venueId}/comments/{commentId} {
      allow read: if true;
      // All comment writes must be performed server-side to ensure consistency
      allow write: if false;
    }
  }
}
